<%= simple_form_for @game, html: { multipart: true } do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


<div class="field">
  <div class="control">
    <%= f.input :title, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
  </div>
</div>

<div class="field">
  <div class="control">
    <%= f.input :additional_info, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
  </div>
</div>

<div class="field">
  <%= f.label :thumbnail %>
  <%= f.file_field :thumbnail %>
</div>

<div class="field">
  <div class="control">
    <%= f.label :release_date %><br />
    <%= f.date_select :release_date, order: [:day, :month, :year] %>
  </div>
</div>

<div class="field">
  <div class="control">
    <label for="game[in_collection]">
      <%= f.input :in_collection, required: false, input_html: { class: "checkbox"}, wrapper: false, label: false %>
      In collection?
    </label>
  </div>
</div>

<div class="field">
  <div class="control">
    <%= f.label :buy_date %><br />
    <%= f.date_select :buy_date, order: [:day, :month, :year] %>
  </div>
</div>

<div class="field">
  <div class="control">
    <label for="game[completed]">
      <%= f.input :completed, required: false, input_html: { class: "checkbox"}, wrapper: false, label: false %>
      Completed?
    </label>
  </div>
</div>

<div class="field">
  <div class="control">
    <%= f.label :completed_date %><br />
    <%= f.date_select :completed_date, order: [:day, :month, :year] %>
  </div>
</div>








<%= f.button :submit, class:"button is-dark" %>
<% end %>