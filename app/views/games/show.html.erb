<div class="section">
  <div class="columns">
    <div class="column is-4">
      <div class="cover">
        <% if @game.thumbnail.attached? %>
        <%= image_tag @game.thumbnail, alt: "#{@game.title}" %>
        <% end %>
      </div>
    </div>

    <div class="column">
      <h3 class="title is-3"><%= @game.title %><h3>
      <h3 class="title is-4"><%= @game.edition.empty? ? "" : "(#{@game.edition})" %><h3>
      <h3 class="title is-5"><%= @game.platform.name %><h3>

      <div class="content">
        <p><strong>Details:</strong></p>

        <p>
          <%= @game.in_collection ? "Physical" : "Digital" %>
        </p>

        <p>
          Completed:
          <%="#{@game.completed_date.strftime("%d-%m-%Y")} (#{distance_of_time_in_words(Date.today, @game.completed_date)} ago)"%>
        </p>

        


      </div>

      <%= link_to 'Edit', edit_game_path(@game) %> |
      <%= link_to 'Back', games_path %>

    </div>
  </div>
</div>