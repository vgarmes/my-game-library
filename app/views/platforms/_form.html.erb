<%= simple_form_for @platform, html: { multipart: true } do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="columns">
  <div class="column is-half">

    <div class="field">
      <div class="control">
        <%= f.input :name, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :manufacturer, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

  </div>
</div>

<hr />

<%= f.button :submit, class:"button is-dark" %>

<% end %>